<div class="container">

  <div class="single-challenge-overview">
    <div class="row spacer"></div>
    <div>
    <div class="challenge-banner <%= challenge_banner_class(@challenge) %>">
      <div class="row">
        <div class="twelvecol">
          <%= challenge_banner_message(@challenge).html_safe %>
        </div>
      </div>
    </div>
  </div>

    <div class="row">
      <div class="sixcol">
        <h1><span>Challenge: </span><span><%= @challenge.user.name %> will <%= @challenge.title.titleize %></span></h1>
      </div>
      <div class="sixcol last">
        <h1>Evidence for this challenge:</h1>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="sixcol">
      <%= image_tag(@challenge.display_media) %>
      <div class="row any-width">
        <div class="single-challenge-details">
          <div class="twocol">
            <%= image_tag(@challenge.user.profile_image_url) %>
          </div>
          <div class="tencol last">
            <h3><span>Challenger: </span><span><%= @challenge.name %></span></h3>
          </div>
        </div>
        <div class="row any-width">
          <div class="twelvecol">
          </br>
          <div>
            <h2>View the Project:</h2>
          </div>
          <div>
            <h3 class="challenge-page-project-link"><%= link_to(@challenge.project.title, project_path(@challenge.project)) %></h3>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="sixcol last">
      <% @challenge_evidences.each do |evidence| %>
        <div class="challenge-evidence">
          <% if evidence.image_url %>
            <%= image_tag(evidence.image_url) %>
          <% elsif evidence.external_url %>
            <%= evidence.embed.html_safe %>
          <% else %>
          <% end %>
        </div>
      <% end %>
      <%= render partial: 'challenge_evidences/form' if @challenge.user == current_user %>
    </div>
  </div>
  <div class="row spacer"></div>
  <div class="row spacer"></div>
  <div class="row spacer"></div>
</div>
